
<h1> Welcome <%= current_user.email %> </h1>
<%= link_to "Sign out", destroy_user_session_path, data: {"turbo-method": :delete}, class: "btn btn-outline-primary btn-lg" %> 
<%= form_with model: Tweet.new, url: tweets_path, method: :post, local: true do |form| %>
    <%= form.text_field :content, class: "form-control", placeholder: "What's happening?" %>
    <%= form.submit "Tweet", class: "btn btn-primary btn-lg" %>
  <% end %>
  <ul>
  <% Tweet.find_each do |tweet| %>
    <li>
      <div class="card mt-3">
        <div class="card-body">
          <p><%= tweet.content %></p>
          <p><%= tweet.user.email %></p>
        </div>
      </div>
    </li>
  <% end %>
</ul>